#endif
#ifdef X0419_IMPLEMENTATION
	VALUE "Реализация", X0419_IMPLEMENTATION
#endif
      }
    }
    BLOCK "VarFileInfo"
    {
      VALUE "Translation", 0x419, 1200
    }
  }


