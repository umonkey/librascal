        VALUE "OriginalFilename", ORIGINAL_FILENAME
        VALUE "ProductName", PRODUCT_NAME
        VALUE "ProductVersion", PRODUCT_VERSION_TXT
	VALUE "Распространение", X0419_DISTRIBUTION
